class Solution {
    public List<String> wordSubsets(String[] words1, String[] words2) {
        List<String> result = new ArrayList<>();
        int[] maxFreq = new int[26];
        
        // Calculate the maximum frequency of each character needed from words2
        for (String word : words2) {
            int[] freq = getFrequency(word);
            for (int i = 0; i < 26; i++) {
                maxFreq[i] = Math.max(maxFreq[i], freq[i]);
            }
        }
        
        // Check each word in words1 to see if it is universal
        for (String word1 : words1) {
            int[] freq1 = getFrequency(word1);
            boolean isUniversal = true;
            
            // Check if word1 contains all characters needed from maxFreq
            for (int i = 0; i < 26; i++) {
                if (freq1[i] < maxFreq[i]) {
                    isUniversal = false;
                    break;
                }
            }
            
            if (isUniversal) {
                result.add(word1);
            }
        }
        
        return result;
    }

    private int[] getFrequency(String word) {
        int[] freq = new int[26];
        for (char c : word.toCharArray()) {
            freq[c - 'a']++;
        }
        return freq;
    }
}
